<launch>

    <arg name="markerId" default="5"/>
    <arg name="markerSize" default="0.1"/>
    <arg name="marker_min_size" default="0.00001"/> <!-- percentage of the entire image -->
    <arg name="eye" default="left"/>
    <arg name="marker_frame" default="marker_frame"/>
    <arg name="ref_frame" default=""/> <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="corner_refinement" default="SUBPIX" /> <!-- NONE, HARRIS, LINES, SUBPIX -->


    <node pkg="aruco_ros" type="single" name="aruco_multiple_usbcam_world_goal" output="screen">>
        <remap from="/camera_info" to="/usb_cam_world/camera_info" />
        <remap from="/image" to="/usb_cam_world/image_rect_color" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size" value="$(arg markerSize)"/>
        <param name="marker_min_size" value="$(arg marker_min_size)"/>
        <param name="marker_id" value="$(arg markerId)"/>
        <param name="reference_frame" value="$(arg ref_frame)"/> <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame" value="camera_frame"/>
        <param name="marker_frame" value="$(arg marker_frame)" />
        <param name="corner_refinement" value="$(arg corner_refinement)" />
        <!-- <param name="rotate_marker_axis" value="False" /> -->
    </node>

    <node pkg="rqt_image_view" type="rqt_image_view" name="image_view_result" args="/aruco_multiple_usbcam_world_goal/result"/>

</launch>

